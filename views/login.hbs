<h1>Login</h1>

{{!-- Show error message if credentials are incorrect --}}
{{#if messages}}
    <div class="alert alert-danger">
        Invalid credentials
    </div>
{{else}}
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}

<form method="post">
  <!-- Username field -->
  <fieldset class="form-group">
    <label for="username" class="col-form-label">
      Username: *
    </label>
    <input name="username" id="username" class="form-control" required />
  </fieldset>

  <!-- Password field -->
  <fieldset class="form-group">
    <label for="password" class="col-form-label">
      Password: *
    </label>
    <input name="password" id="password" type="password" class="form-control" required />
  </fieldset>
  <br/>

  <!-- Submit and Social Login buttons -->
  <fieldset class="form-group">
    <button class="btn btn-dark btn-block" type="submit">
      Login
    </button>
    <div class="d-flex justify-content-between mt-2">
      <a class="btn btn-primary" href="/Facebook">Login with Facebook</a>
      <a class="btn btn-secondary" href="/Github">Login with Github</a>
    </div>
  </fieldset>

  <!-- Registration link -->
  <hr />
  <p class="text-center">
    Need an account? <a href="/register" title="Register">Register</a>
  </p>
</form>
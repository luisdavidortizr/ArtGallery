<h1>
  Login
</h1>
{{!-- Show error message if credentials are incorrect --}}
{{#if messages}}
    <div class="alert alert-danger">
        Invalid credentials
    </div>
{{else}}
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}
<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-2 control-label">
      Username: *
    </label>
    <input name="username" id="username" required />
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-2 control-label">
      Password: *
    </label>
    <input name="password" id="password" type="password" required />
  </fieldset>
  <br/>
  <fieldset class="form-group">
    <button class="btn btn-dark">
      Login
    </button>
    <a class="btn btn-primary offset-2" href="/Facebook">Login with Facebook</a>
    <a class="btn btn-secondary" href="/Github">Login with Github</a>
    <hr />
    Need an account?
    <a href="/register" title="Register">
      Register
    </a>
  </fieldset>
</form>
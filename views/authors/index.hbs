<h1>
  {{title}}
</h1>
{{!-- Add links to CRUD operations --}}
{{#if user}}
  <a href="/authors/add" class="btn btn-dark mb-3">Add a new Author</a>
{{/if}}

{{!-- To Show data --}}
<table class="table table-striped table-bordered">
  <thead>
    <th>Name</th>
    <th>Author ID</th>
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.authorId}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>